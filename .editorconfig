# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
# Set default charset
charset = utf-8

# Set the default indent style
indent_style = space
# Set the default indent size
indent_size = 4
# Set the line ending type
end_of_line = lf
# Insert a final newline at the end of files
insert_final_newline = true
# Trim trailing whitespace
trim_trailing_whitespace = true

# JavaScript files
[*.js]
indent_size = 4

# SCSS files
[*.scss]
indent_size = 4

# HTML files
[*.html]
indent_size = 4

# Markdown files
[*.md]
indent_size = 4

[*.yaml]
indent_size = 2
